package com.example.demo;
import static org.junit.Assert.assertEquals;
import org.junit.Test;

public class PrintXTest {
    @Test
    public void testPrintX() {
        String expectedFor3 = 
            "X  X\n" +
            " X\n" + 
            "X  X";

        String expectedFor5 = 
            "X    X\n" +
            " X  X\n" + 
            "  X\n" +
            " X  X\n" +
            "X    X";

        assertEquals(expectedFor3, DiagonalX.printX(3));
        assertEquals(expectedFor5, DiagonalX.printX(5));
    }
}
